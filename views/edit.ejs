<% layout('layout')  -%>
    <!-- 用于识别填充到模板中的内容 -->
   
            <% todos.forEach( function( todo ){ %>
                <% if( todo._id == current ){ %>
                    <div class="alert alert-info" role="alert">
                        <form action="/update/<%= todo._id %>" method="post" accept-charset="utf-8">
                            <input class="form-control" type="text" name="content" value="<%= todo.content %>" />
                        </form>
                    </div>
                <% }else{ %>
                        <div class="alert alert-info" role="alert">
                            <a href="/edit/<%= todo._id %>" title="Edit this todo item">
                                <%= todo.content %>
                            </a>
                              <!-- 只是一个删除按钮 -->
                            <a href="/destroy/<%= todo._id %>" title="Delete this todo item">
                                <button type="button" class="close"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            </a>
                        </div>
                 <% } %>
            <% }); %>
    
